page {
  height: 100%;
}
.container {
  height: 100%;
}

/* 显示文字 */
.text {
  position: fixed;
  left: 50rpx;
  top: 60rpx;
  padding: 35rpx;
}
.text::before {
  content: '';
  display: block;
  width: 60rpx;
  height: 1rpx;
  background-color: #fff;
  left: 0;
  top: 0;
  position: absolute;
}
.text::after {
  content: '';
  display: block;
  width: 1rpx;
  height: 60rpx;
  background-color: #fff;
  left: 0;
  top: 0;
  position: absolute;
}
.text .txt {
  display: block;
  color: #fff;
}
.text .txt:first-child {
  font-size: 60rpx;
  padding-bottom: 30rpx;
}
.text .txt:last-child {
  font-size: 34rpx;
  padding-left: 100rpx;
}

/* 轮播图 */
.up,
.swiper,
.swiper-item {
  width: 100%;
  height: 100%;
}
/* 轮播图指示点位置 */
.wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: 250rpx;
}

/* 保存和取消按钮 */
.down {
  position: fixed;
  bottom: 0;
  width: 100%;
}
.down .btn-box {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 250rpx;
  background-color: #f7f7fa;
}
.down .btn-box .btn {
  width: 277rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 34rpx;
  margin: 0 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
  color: #333;
  border: 1rpx solid #ddd;
}
.down .btn-box .btn.btn-success {
  background-color: #07c160;
  color: #fff;
  border: none;
}
.down .btn-box .btn::after {
  border: none;
}

/* 画图(隐藏) */
.canvas-poster {
  position: fixed;
  /* zoom: 40%; */
  left: -10000px; /* 将画布隐藏在可视区域外 */
}

/* 授权按钮 */
.authBtn {
  position: fixed;
  top: 0px;
  left: 0px;
  right: 0px;
  width: 350rpx;
  height: 150rpx;
  line-height: 150rpx;
  font-size: 40rpx;
  margin-top: 400rpx;
  margin-left: auto;
  margin-right: auto;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  font-size: 32rpx;
  color: #999;
}

/* 空状态提示 */
.empty-tip {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  font-size: 32rpx;
  color: #999;
}
